    <section class="jumbotron text-center">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <!-- UPDATE COURSE -->
                    <form action="/auth/updateCourse" method="POST">
                        <div class="form-group">
                            <label for="title"><%= course[0].title %> </label>
                            <input type="text" value="<%= course[0].title %>" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="form-group">
                            <label for="genre"><%= course[0].genre %></label>
                            <input type="text" value="<%= course[0].genre %>" class="form-control" id="genre" name="genre" required>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend" id="price">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="text" value="<%= course[0].price %>" class="form-control" aria-label="Amount (to the nearest dollar)" name="price" required>
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="courseDescription">Course Description</label>
                            <textarea class="form-control" id="courseDescription" rows="3" name="courseDescription" required><%= course[0].description %></textarea>
                        </div>

                        <input type="number" value="<%= course[0].course_ID %>" class="form-control" name="course_ID" hidden>

                        <button type="submit" class="btn btn-primary">Update Course</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

